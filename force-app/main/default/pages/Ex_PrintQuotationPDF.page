                                <th>Amount</th>
                                
                            </tr>
                            
                            
                            <tr>
                                <td Style =""><b>Actual Consideration Value</b></td>
                                <td>&nbsp;</td>
                                <td Style =""><b>{!strtotalagreementAmountbeforeDiscount}</b></td>
                            </tr>
                            <apex:outputPanel rendered="{!discountAmount != 0}">
                                <tr>
                                    <td Style =""><b>Discount</b></td>
                                    <td>&nbsp;</td>
                                    <td Style =""><b>{!strdiscountAmount}</b></td>
                                </tr>
                            </apex:outputPanel>
