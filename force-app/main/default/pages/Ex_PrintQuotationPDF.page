<apex:page controller="Ex_PrintQuotationController" renderAs="pdf" standardStylesheets="false" docType="html-5.0" applyBodyTag="false" applyHtmlTag="false" showHeader="false">
    <html>
        <head>
            <meta charset="UTF-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <style type="text/css" media="print">
                @page {
                 font-family: Times, sans-serif; 
                size: A4;
                margin-top: 0.5in;
                padding: 2px;
                border: 1px solid black;
                @top-left {
                content: element(header);
                }
                @bottom-left {
                content: "Page " counter(page) ;
                }
                @bottom-right {
                content: element(footer);
                }
                }
                
                .header {
                position: running(header);
                font-size: 10px;
                text-align: left;
                padding-left: 5px;
                margin-top: 5mm;
                }
                div.footer {
                display: block;
                text-align: right;
                position: running(footer);
                }
                * {
                box-sizing: border-box;
                font-size: 8.5px;
                }
                body { 
                font-family: Times, sans-serif; 
                margin: 0; 
                padding: 0; 
                }
                
                table {
                width: 100%;
                border-collapse: collapse;
                margin: 5px 0;
                }
                th, td {
                border: 0.5px solid black;
                padding: 4px;
                text-align: left;
                font-size: 8px;
                page-break-inside: avoid;
                }
                
                tr{
                 page-break-inside: avoid;
                }
                
                th {
                background-color: #DCDCDC;
                font-weight: bold;
                }
                .align-right {
                text-align: right;
                }
                .total-row {
                background-color: #DCDCDC;
                font-weight: bold;
                }
                .container2{
                display: flex;
                }
                .box2{
                flex: 0 1 5%; /* Adjust width as needed */
                /* background-color: #f2f2f2; */
                padding: 1px;
                margin: 1px;
                /* text-align: center; */
                }
            </style>
        </head>
        <body>
            <p style="text-align:center;font-size:14px;border:none;font-weight:bold; !important;">
                    	DRAFT Price Sheet
                   </p>
            
            <table style="border:none!important;">
                
                <tr>
       				 <td style="border:none;width:49%!important; vertical-align:top;">
