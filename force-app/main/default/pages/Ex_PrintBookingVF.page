    <html>
        <head>
            <meta charset="UTF-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <style type="text/css" media="print">
                @page {
                    font-family: Times, sans-serif; 
                    size: A4;
                    margin-top: 1.5in;
                    padding: 2px;
                    @top-left {
                        content: element(header);
                    }
                    @bottom-left {
                        content: element(footer);
                    }
                }
                .header {
                    position: running(header);
                    font-size: 10px;
                    text-align: left;
                    padding-left: 5px;
                    margin-top: 5mm;
                }
                .footer {
                    display: block;
                    text-align: left;
                    position: running(footer);
                    padding: 8px;
                }
                * {
                    box-sizing: border-box;
                    font-size: 8.5px;
                }
                body { 
                    font-family: 'Arial Unicode MS'; 
                    margin: 0; 
                    padding: 0; 
                }
                .logo img {
                    height: 150px;
                    width: 350px;
                }
                hr {
                    border: none;
                    height: 1px;
                    color: #333;
                    background-color: #333;
                }
                .applicantDetails {
                    font-size: 12px;
                    font-family: 'Arial Unicode MS'; 
                }
                table {
                    font-size: 12px;
                    width: 100%;
                }
                th, td {
                    padding: 5px;
                    text-align: left;
                }
            </style>
        </head>
