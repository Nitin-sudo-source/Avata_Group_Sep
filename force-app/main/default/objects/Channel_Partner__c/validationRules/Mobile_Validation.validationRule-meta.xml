<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
    ISBLANK(Mobile__c),
    NOT(REGEX(Mobile__c, &quot;[0-9]{10}&quot;))
)</errorConditionFormula>
    <errorDisplayField>Mobile__c</errorDisplayField>
    <errorMessage>Mobile number must be exactly 10 digits and cannot be blank</errorMessage>
</ValidationRule>
