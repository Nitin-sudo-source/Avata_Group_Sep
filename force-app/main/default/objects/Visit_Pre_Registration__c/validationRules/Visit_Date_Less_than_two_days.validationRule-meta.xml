<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Visit_Date_Less_than_two_days</fullName>
    <active>false</active>
    <errorConditionFormula>AND(Visit_Date__c &gt; (NOW() + 2), ISNEW())</errorConditionFormula>
    <errorDisplayField>Visit_Date__c</errorDisplayField>
    <errorMessage>Visit Date Should be Less than 2 days</errorMessage>
</ValidationRule>
