                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Record.WhatId</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>get_Lead.Is_First_Presales_call_answered_done__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>get_Lead.Lead_Stage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>SNP</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SMS_Creation_0</targetReference>
            </connector>
            <label>After First Call Answered Call Status is NOAnswer</label>
        </rules>
